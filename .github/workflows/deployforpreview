name: Deploy for preview

on: [push]

jobs:
  preview:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@master
      - uses: chrnorm/deployment-action@releases/v1
        name: Create GitHub deployment
        id: test
        with:
          token: ${{ secrets.f3f454e22f564db67b35ab46f8641df3ef434560}}
          description: 'Preview my app'
          environment: preview

      - uses: shallwefootball/s3-upload-action@master
        name: Upload S3
        id: S3
        with:
          aws_key_id: ${{ secrets.AKIA3AATCJDSE6WZLNFP }}
          aws_secret_access_key: ${{ secrets.aTs8wenGNAcVKaqvCooiXZ8A0VGUxb0FZrSwnrua}}
          aws_bucket: ${{ secrets.adamonaws.com }}
          source_dir: 'static'

      - name: Update deployment status (success)
        if: success()
        uses: chrnorm/deployment-status@releases/v1
        with:
          token: ${{ secrets.f3f454e22f564db67b35ab46f8641df3ef434560 }}
          target_url: https://adamonaws.com.s3.us-west-1.amazonaws.com//${{steps.S3.outputs.object_key}}/index.html
          state: 'success'
          deployment_id: ${{ steps.test.outputs.deployment_id }}
